CREATE DATABASE big_bread_production ;

use big_bread_production;

CREATE TABLE insumos (
  id_insumo INT PRIMARY KEY AUTO_INCREMENT,
  nombre VARCHAR(50) NOT NULL,
  descripcion VARCHAR(255),
  precio DECIMAL(10,2),
  cantidad INT,
  proveedor VARCHAR(50)
);

CREATE TABLE productos (
  id_producto INT PRIMARY KEY AUTO_INCREMENT,
  codigo_barras VARCHAR(50),
  nombre VARCHAR(50) NOT NULL,
  descripcion VARCHAR(255),
  stock INT,
  precio DECIMAL(10,2),
  unidad_medida VARCHAR(50),
  fecha_creacion DATE,
  peso_unitario DECIMAL(10,2)
);

CREATE TABLE produccion_diaria (
  id_produccion_diaria INT PRIMARY KEY AUTO_INCREMENT,
  fecha DATE,
  id_producto INT,
  cantidad_producida INT,
  estado_produccion VARCHAR(50),
  FOREIGN KEY (id_producto) REFERENCES productos(id_producto)
);

CREATE TABLE recetas (
  id_receta INT PRIMARY KEY AUTO_INCREMENT,
  id_producto INT,
  id_insumo INT,
  cantidad_requerida INT,
  orden_preparacion INT,
  nombre_receta VARCHAR(100),
  FOREIGN KEY (id_producto) REFERENCES productos(id_producto),
  FOREIGN KEY (id_insumo) REFERENCES insumos(id_insumo)
);
